web_color = white
replace_spaces = 0
web_color2 = ""
dirscan_speed = 5
enable_filejoin = 1
create_group_folders = 0
api_key = ${SABNZBD_APIKEY}
no_penalties = 0
bandwidth_limit = 0
dirscan_dir = nzb/loading
disable_api_key = 0
email_to = ,
password = ""
permissions = ""
auto_disconnect = 1
enable_date_sorting = 0
replace_dots = 0
movie_sort_extra = -cd%1
ionice = ""
enable_unzip = 1
download_free = ""
port = 8080
email_dir = ""
email_full = 0
log_dir = logs
admin_dir = admin
nzb_backup_dir = ""
tv_sort_countries = 1
date_categories = tv,
ssl_type = v23
