[[movies]]
priority = -100
pp = ""
name = movies
script = Default
newzbin = Movies
dir = Movies
[[consoles]]
priority = -100
pp = ""
name = consoles
script = Default
newzbin = Consoles
dir = Consoles
[[books]]
priority = -100
pp = ""
name = books
script = Default
newzbin = Books
dir = Books
[[games]]
priority = -100
pp = ""
name = games
script = Default
newzbin = Games
dir = Games
[[anime]]
priority = -100
pp = ""
name = anime
script = Default
newzbin = Anime
dir = Anime
[[music]]
priority = -100
pp = ""
name = music
script = Default
newzbin = Music
dir = Music
[[pda]]
priority = -100
pp = ""
name = pda
script = Default
newzbin = PDA
dir = PDA
[[emulation]]
priority = -100
pp = ""
name = emulation
